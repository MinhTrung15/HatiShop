@model HatiShop.Models.Bill

@{
    ViewData["Title"] = "Sửa đơn hàng";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-sm-6">
            <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        </div>
        <div class="col-sm-6 text-right">
            <a asp-action="Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                <i class="fas fa-arrow-left fa-sm text-white-50"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin đơn hàng</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CustomerId" class="control-label font-weight-bold">Khách hàng</label>
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId" required>
                                <option value="">-- Chọn khách hàng --</option>
                            </select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="StaffId" class="control-label font-weight-bold">Nhân viên</label>
                            <select asp-for="StaffId" class="form-control" asp-items="ViewBag.StaffId" required>
                                <option value="">-- Chọn nhân viên --</option>
                            </select>
                            <span asp-validation-for="StaffId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DiscountAmount" class="control-label font-weight-bold">Giảm giá</label>
                            <input asp-for="DiscountAmount" class="form-control" type="number" min="0" />
                            <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="control-label font-weight-bold">Thành tiền</label>
                            <input asp-for="DiscountedTotal" class="form-control text-success font-weight-bold" readonly />
                        </div>
                    </div>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-warning btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-save"></i>
                        </span>
                        <span class="text">Lưu thay đổi</span>
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-eye"></i>
                        </span>
                        <span class="text">Xem chi tiết</span>
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-times"></i>
                        </span>
                        <span class="text">Hủy bỏ</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>