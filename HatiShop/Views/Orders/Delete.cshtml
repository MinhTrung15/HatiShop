@model HatiShop.Models.Bill

@{
    ViewData["Title"] = "Xóa đơn hàng";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-sm-6">
            <h1 class="h3 mb-0 text-gray-800 text-danger">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="card shadow mb-4 border-left-danger">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Xác nhận xóa</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
                <p class="mb-0">Bạn có chắc chắn muốn xóa đơn hàng này? Hành động này không thể hoàn tác!</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mã đơn hàng:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Khách hàng:</dt>
                        <dd class="col-sm-8">@Model.Customer.FullName</dd>

                        <dt class="col-sm-4">Nhân viên:</dt>
                        <dd class="col-sm-8">@Model.Staff.FullName</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreationTime.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Thành tiền:</dt>
                        <dd class="col-sm-8 font-weight-bold text-success">@Model.DiscountedTotal.ToString("N0") ₫</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4 text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-trash"></i>
                    </span>
                    <span class="text">Xác nhận xóa</span>
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-times"></i>
                    </span>
                    <span class="text">Hủy bỏ</span>
                </a>
            </form>
        </div>
    </div>
</div>