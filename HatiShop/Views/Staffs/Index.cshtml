<!-- Views/Staffs/Index.cshtml -->
@model IEnumerable<HatiShop.Models.Staff>

@{
    ViewData["Title"] = "Quản lý Nhân viên";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-user-tie me-2"></i>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>Thêm nhân viên
    </a>
</div>

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-search me-2"></i>Tìm kiếm</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Loại tìm kiếm</label>
                <select name="searchType" class="form-select">
                    @foreach (var item in ViewBag.SearchTypes)
                    {
                        <option value="@item.Value" selected="@(ViewBag.SearchType == item.Value)">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-7">
                <label class="form-label">Từ khóa</label>
                <input type="text" name="searchValue" class="form-control" value="@ViewBag.SearchValue" placeholder="Nhập từ khóa tìm kiếm...">
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="fas fa-search me-1"></i>Tìm
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Staff Table -->
<div class="card">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Danh sách nhân viên</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Ảnh</th>
                            <th>Mã NV</th>
                            <th>Tên đăng nhập</th>
                            <th>Họ tên</th>
                            <th>Giới tính</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Vai trò</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.AvatarPath))
                                    {
                                        <img src="@item.AvatarPath" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" alt="Avatar">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="fas fa-user-tie text-white"></i>
                                        </div>
                                    }
                                </td>
                                <td>@item.Id</td>
                                <td>@item.Username</td>
                                <td>@item.FullName</td>
                                <td>
                                    <span class="badge bg-info">@item.Gender</span>
                                </td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>
                                    @{
                                        var roleClass = item.Role switch
                                        {
                                            "Quản lý" => "bg-danger",
                                            "Nhân viên" => "bg-primary",
                                            "Thu ngân" => "bg-success",
                                            "Kho" => "bg-warning text-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @roleClass">@item.Role</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-user-tie fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Không có nhân viên nào</h5>
                <p class="text-muted">Hãy thêm nhân viên mới để bắt đầu</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Thêm nhân viên đầu tiên
                </a>
            </div>
        }
    </div>
</div>