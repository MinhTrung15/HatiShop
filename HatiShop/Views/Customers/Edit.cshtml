@model HatiShop.Models.Customer

@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Quay lại
    </a>
</div>

<div class="card">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin khách hàng</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Mã KH - Readonly vì không thể thay đổi -->
            <div class="col-md-6">
                <label asp-for="Id" class="form-label">Mã KH</label>
                <input asp-for="Id" class="form-control" readonly />
                <small class="form-text text-muted">Mã KH không thể thay đổi</small>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <!-- Tên đăng nhập -->
            <div class="col-md-6">
                <label asp-for="Username" class="form-label">Tên đăng nhập *</label>
                <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Mật khẩu -->
            <div class="col-md-6">
                <label asp-for="Password" class="form-label">Mật khẩu *</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Họ tên -->
            <div class="col-md-6">
                <label asp-for="FullName" class="form-label">Họ tên *</label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Giới tính -->
            <div class="col-md-6">
                <label asp-for="Gender" class="form-label">Giới tính</label>
                <select asp-for="Gender" class="form-select">
                    <option value="">Chọn giới tính</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- Ngày sinh -->
            <div class="col-md-6">
                <label asp-for="BirthDate" class="form-label">Ngày sinh</label>
                <input asp-for="BirthDate" type="date" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>

            <!-- Số điện thoại -->
            <div class="col-md-6">
                <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập địa chỉ email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Doanh thu -->
            <div class="col-md-6">
                <label asp-for="Revenue" class="form-label">Doanh thu</label>
                <input asp-for="Revenue" class="form-control" placeholder="Nhập doanh thu" />
                <span asp-validation-for="Revenue" class="text-danger"></span>
            </div>

            <!-- Hạng -->
            <div class="col-md-6">
                <label asp-for="Rank" class="form-label">Hạng</label>
                <select asp-for="Rank" class="form-select">
                    <option value="MỚI">MỚI</option>
                    <option value="ĐỒNG">ĐỒNG</option>
                    <option value="BẠC">BẠC</option>
                    <option value="VÀNG">VÀNG</option>
                    <option value="KIM CƯƠNG">KIM CƯƠNG</option>
                </select>
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>

            <!-- Địa chỉ -->
            <div class="col-12">
                <label asp-for="Address" class="form-label">Địa chỉ</label>
                <textarea asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Ảnh đại diện -->
            <div class="col-12">
                <label asp-for="AvatarFile" class="form-label">Ảnh đại diện</label>
                <input asp-for="AvatarFile" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="AvatarFile" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(Model.AvatarPath))
                {
                    <div class="mt-2">
                        <img src="@Model.AvatarPath" class="rounded" style="width: 100px; height: 100px; object-fit: cover;" alt="Avatar hiện tại">
                        <small class="form-text text-muted">Ảnh hiện tại</small>
                    </div>
                }
            </div>

            <!-- Nút submit -->
            <div class="col-12">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Cập nhật
                    </button>
                </div>
            </div>
        </form>

        <!-- Debug information -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                <h5>Lỗi validation:</h5>
                <ul>
                    @foreach (var state in ViewData.ModelState)
                    {
                        foreach (var error in state.Value.Errors)
                        {
                            <li><strong>@state.Key:</strong> @error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Set selected value for Rank dropdown
        document.addEventListener('DOMContentLoaded', function () {
            var rankSelect = document.getElementById('Rank');
            var currentRank = '@Model.Rank';
            if (rankSelect && currentRank) {
                for (var i = 0; i < rankSelect.options.length; i++) {
                    if (rankSelect.options[i].value === currentRank) {
                        rankSelect.options[i].selected = true;
                        break;
                    }
                }
            }

            // Set selected value for Gender dropdown
            var genderSelect = document.getElementById('Gender');
            var currentGender = '@Model.Gender';
            if (genderSelect && currentGender) {
                for (var i = 0; i < genderSelect.options.length; i++) {
                    if (genderSelect.options[i].value === currentGender) {
                        genderSelect.options[i].selected = true;
                        break;
                    }
                }
            }
        });
    </script>
}